---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="By popular demand, I've created a new website. This is my personal website." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	body {
		font-family: system-ui, sans-serif;
		background: #FFF4F4;
		cursor: url('cursor.png'), auto;
	}
	a:hover {
		cursor: url('cursor-active.png'), auto;
	}
</style>
